{
  "version": 3,
  "plugin": {
    "pattern": ".so",
    "folder": "/etc/krakend/plugins/.bin/"
  },
  "endpoints": [
    {{ template "sampleGetAllPosts" }},
    {{ template "sampleGetAPostById" }},
    {{ template "sampleGetAllComments" }},
    {{ template "sampleGetAllProfile" }},
    {{ template "testGetById" }}
  ],
  "extra_config": {
    "router": {
      "return_error_msg": true
    },
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "plugin/http-server": {
      "name": [
        "custom-http-server"
      ],
      "custom-http-server": {
        "path": "/__debug/hijack-me"
      }
    }
  }
}