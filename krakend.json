{
  "version": 3,
  "plugin": {
    "pattern": ".so",
    "folder": "/etc/krakend/plugins/.bin/"
  },
  "endpoints": [
    {
      "@comment": "Sample: get all posts",
      "endpoint": "/posts",
      "method": "GET",
      "output_encoding": "json-collection",
      "backend": [
        {
          "url_pattern": "/posts",
          "host": ["http://sample:3010/"],
          "method": "GET",
          "encoding": "safejson",
          "extra_config":{
            "backend/http": {
              "return_error_code": true
            }
          }
        }
      ]
    },
    {
      "@comment": "Sample: get one post by id",
      "endpoint": "/posts/{id}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/posts/{id}",
          "host": ["http://sample:3010/"],
          "method": "GET",
          "extra_config":{
            "backend/http": {
              "return_error_code": true
            }
          }
        }
      ]
    },
    {
      "endpoint": "/test/{id}",
      "backend": [
        {
          "host": [
            "http://localhost:8080"
          ],
          "url_pattern": "/__debug/{id}",
          "extra_config": {
            "plugin/http-client": {
              "name": "krakend-client-example",
              "krakend-client-example": {
                "path": "/__debug/hijack-me"
              }
            }
          }
        }
      ],
      "extra_config": {
        "plugin/req-resp-modifier": {
          "name": [
            "krakend-debugger-request",
            "krakend-debugger-response"
          ],
          "krakend-debugger": {}
        }
      }
    }
  ],
  "extra_config": {
    "router": {
      "return_error_msg": true
    },
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "plugin/http-server": {
      "name": [
        "krakend-server-example"
      ],
      "krakend-server-example": {
        "path": "/__debug/hijack-me"
      }
    }
  }
}